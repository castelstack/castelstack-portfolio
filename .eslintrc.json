{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@next/next/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["standard", "prettier"],
  "parserOptions": {
    "ecmaVersion": "ES6",
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/prop-types": "off", // Disable prop-types checking if you're using TypeScript or don't need it
    "react/react-in-jsx-scope": "off", // Handled by Next.js automatically
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-empty": ["error", {"allowEmptyCatch": true}],
    "no-underscore-dangle": "off", // Allow using underscore prefixes for internal variables
    "prefer-const": "error",
    "arrow-parens": ["error", "always"],
    "quotes": ["error", "double", {"allowTemplateLiterals": true}],
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "space-before-function-paren": "off",
    "comma-dangle": "off",
    "object-curly-spacing": "off",
    "array-bracket-spacing": "off",
    "linebreak-style": ["error", "unix"],
    "no-trailing-spaces": "error",
    "keyword-spacing": "error",
    "no-multiple-empty-lines": ["error", {"max": 1}],
    "space-before-blocks": "error",
    // "no-restricted-globals": [
    //   "error",
    //   // Restricted global variables listed here
    // ]
    "no-redeclare": ["error", {"builtinGlobals": false}],
    "no-var": "error",
    "prefer-arrow-callback": "error",
    "prefer-template": "error",
    "prefer-rest-params": "error",
    "prefer-spread": "error"
    // Your custom rules can be added here
  }
}
